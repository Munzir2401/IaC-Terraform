# ---------------------------------------------------------------------------------------------------------------------
# AWS Provider Configuration
# ---------------------------------------------------------------------------------------------------------------------
aws_region = "ap-south-1"

# ---------------------------------------------------------------------------------------------------------------------
# VPC Configuration
# ---------------------------------------------------------------------------------------------------------------------
vpc_name             = "my-prod-vpc"
vpc_cidr_block       = "75.40.0.0/16"
public_subnet_cidrs  = ["75.40.0.0/25", "75.40.0.128/25"]
private_subnet_cidrs = ["75.40.1.0/25", "75.40.1.128/25"]

# ---------------------------------------------------------------------------------------------------------------------
# Load Balancer & EC2 Configuration
# ---------------------------------------------------------------------------------------------------------------------
instance_type = "t3.micro"
key_pair_name = "new_freelancer_key_pair"
alb_name      = "prod-my-alb"

# ---------------------------------------------------------------------------------------------------------------------
# Target Group to Auto Scaling Group configuration
# ---------------------------------------------------------------------------------------------------------------------

homepage_asg = {
    min_size         = 1
    desired_capacity = 2
    max_size         = 3
    cpu_target_value = 50
}
per_tg_asg_defaults = {
  min_size         = 1
  desired_capacity = 1
  max_size         = 2
  cpu_target_value = 50
}
per_tg_asg_config = {
  "cars" = {
    min_size         = 2
    desired_capacity = 2
    max_size         = 4
    cpu_target_value = 40
  }
}

